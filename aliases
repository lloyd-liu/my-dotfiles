alias mkdir='mkdir -p'
alias l='ls -GF'
alias ll='ls -al'
alias lh='ls -Alh'
alias ls="ls -GF"
alias la="ls -a"
alias c="clear"
alias dot="cd ~/dotfiles"
alias d="cd ~/Desktop"
alias t4="cd /Users/xjliu/Documents/2015/projects/php/laravel/laravel.tricks" 
alias t5="cd /Users/xjliu/Documents/2015/projects/php/laravel/tmd5.2" 
